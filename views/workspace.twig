{% extends 'layout.twig' %}

{% import './classes/modal.class.twig' as modal %}

{% block styles %}
    <link rel="stylesheet" href="../css/workspace.css">
{% endblock %}

{% block content %}
    <div class="hello">
        <div id="__welcomeScreen" class="modal fade" role="dialog">
            {% if page.message.info %}
                {{ modal.info(page.message) }}
            {% endif %}
        </div>
    </div>
    <div class="control-panel--actions col-sm-3">
        <div class="actions-list">
            <a href="#" id="action_advSearch" class="panel-action list-group-item">
                <p class="list-group-item-heading h3">Расширенный поиск</p>
                <p class="list-group-item-text h4">Поиск с параметрами и дополнительными фильтрами</p>
            </a>
            <a href="#" id="action_defSearch" class="panel-action list-group-item">
                <p class="list-group-item-heading h3">Обычный поиск</p>
                <p class="list-group-item-text h4">Поиск по строке и ничего лишнего</p>
            </a>
            <a href="#" id="action_testSearch" class="panel-action list-group-item">
                <p class="list-group-item-heading h3">Тестовый поиск</p>
                <p class="list-group-item-text h4">...</p>
            </a>
        </div>
    </div>

    <div id="control-panel__output" class="panel--output col-sm-9">
        <div class="panel--input-values panel panel-default">
            <div class="panel-heading">Параметры запроса</div>
            <div class="panel-body">
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="../js/workspace.js"></script>
{% endblock %}

